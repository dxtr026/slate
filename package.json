    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0",
    "yaml-js": "^0.2.0"
  },
  "scripts": {
    "bench": "npm-run-all build:npm benchs",
    "benchs": "babel-node ./node_modules/.bin/_matcha --reporter ./benchmark/reporter ./benchmark/index.js > ./tmp/benchmark-comparison.json && babel-node ./benchmark/compare",
    "benchs:save": "babel-node ./node_modules/.bin/_matcha --reporter ./benchmark/reporter ./benchmark/index.js > ./tmp/benchmark-baseline.json",
    "build": "yarn run clean && mkdir -p ./dist && npm-run-all build:npm build:commonjs build:es && yarn run build:packages",
    "build:npm": "NODE_ENV=production babel --out-dir ./lib ./src",
    "build:commonjs": "cross-env NODE_ENV=production cross-env BABEL_ENV=commonjs babel ./src --out-dir ./dist/commonjs",
    "build:es": "cross-env NODE_ENV=production cross-env BABEL_ENV=es babel ./src --out-dir ./dist/es",
    "build:packages": "lerna run build",
    "build:test": "babel --out-dir ./lib ./src --source-maps inline",
    "clean": "rm -rf ./lib ./dist ./examples/build.dev.js ./examples/build.prod.js && lerna run clean && lerna clean",
    "disc": "npm-run-all build disc:build disc:open",
    "disc:build": "mkdir -p ./tmp && browserify ./lib/index.js --full-paths --transform uglifyify --standalone Slate | uglifyjs > ./tmp/build.js",
    "disc:open": "discify ./tmp/build.js --open",
    "examples": "npm-run-all examples:dev examples:prod",
    "examples:dev": "browserify --debug --transform babelify ./examples/index.js > ./examples/build.dev.js",
    "examples:prod": "NODE_ENV=production browserify --transform babelify ./examples/index.js > ./examples/build.prod.js",
    "gh-pages": "yarn run build && yarn run build:examples && gh-pages --dist ./examples",
    "lint": "eslint packages/*/src packages/*/test examples/*/*.js examples/dev/*/*.js",
    "open": "open http://localhost:8080/dev.html",
    "prepublish": "npm run build",
    "release": "yarn run test && yarn run lint && lerna publish",
    "release:next": "np --tag=next",
    "start": "http-server ./examples",
    "test": "mocha --compilers js:babel-core/register ./packages/*/test/index.js",
    "watch": "npm-run-all --parallel --print-label watch:examples watch:packages start",
    "watch:examples": "watchify --debug --transform babelify ./examples/index.js -o ./examples/build.dev.js -v",
    "watch:lib": "babel --watch --out-dir ./lib ./src --source-maps inline",
    "watch:packages": "lerna run --parallel watch"
  },
  "browserify-shim": {
    "immutable": "Immutable",
    "react": "React",
    "react-dom": "ReactDOM",
    "react-dom/server": "ReactDOMServer",
    "debug": "Debug"
  },
  "keywords": [
    "canvas",
    "contenteditable",
    "doc",
    "docs",
    "document",
    "edit",
    "editor",
    "html",
    "immutable",
    "markdown",
    "medium",
    "paper",
    "react",
    "rich",
    "rich-text",
    "richtext",
    "slate",
    "text",
    "wysiwyg",
    "wysiwym"
  ]
}
