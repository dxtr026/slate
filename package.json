    "read-yaml-promise": "^1.0.2",
    "slate-auto-replace-text": "^0.3.0",
    "slate-collapse-on-escape": "^0.2.0",
    "slate-soft-break": "^0.2.0",
    "slate-sugar": "^0.6.1",
    "source-map-support": "^0.4.0",
    "to-camel-case": "^1.0.0",
